.swiper-item{
    height: 150px;

    -webkit-background-size: 100% 100%;
    background-size: 100%;
    background-position: 50%;
    background-repeat: no-repeat;
    position: relative;
}

.swiper-item .mask{

    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-image: -webkit-linear-gradient(bottom,rgba(0,0,0,.7),rgba(0,0,0,.1) 50%,rgba(0,0,0,.1));
    background-image: -webkit-gradient(linear,left bottom,left top,from(rgba(0,0,0,.7)),color-stop(50%,rgba(0,0,0,.1)),to(rgba(0,0,0,.1)));
    background-image: linear-gradient(bottom,rgba(0,0,0,.7),rgba(0,0,0,.1) 50%,rgba(0,0,0,.1));
}

.swiper-item .title{
    position: absolute;
    bottom: 20px;
    line-height: 1.5;
    left: 0;
    padding: 0px 15px;
    font-weight: 300;
    color: #fff;
}

.name{
    margin-top: 15px;
    color: #333;
}

.story{
    background: #fff;
    border: 1px solid #e8e8e8;
    margin: 15px 0;
    padding: 8px;
    border-radius: 4px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
    flex-direction: row;
}
.story .pic{
    width: 80px;
    height: 80px;
}
.story .title{
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    margin-left: 8px;
    font-size: 14px;
    line-height: 1.5em;
}
